# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/database_name

# JWT Configuration
SECRET_KEY=your-super-secret-jwt-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
REFRESH_TOKEN_MAX_COUNT=5

# Mailchimp Email Configuration
MAILCHIMP_API_KEY=your-mailchimp-api-key-here
MAILCHIMP_SERVER_PREFIX=us1
FROM_EMAIL=noreply@yourhealthcareapp.com
FRONTEND_URL=https://yourhealthcareapp.com

# Email Settings
EMAIL_VERIFICATION_EXPIRE_HOURS=24
PASSWORD_RESET_EXPIRE_HOURS=2

# Security Settings
RATE_LIMIT=10
RATE_LIMIT_WINDOW=60
MAX_LOGIN_ATTEMPTS=3
LOCKOUT_TIME=120
ENABLE_ACCOUNT_LOCKING=true

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here

# Logging
LOG_LEVEL=INFO
